<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".profile_link"), @user %></span> 
      <span>
        <b><%= t ".microposts" %></b>
        <%= @user.microposts.count %>
      </span>
    </section> 
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: Settings.gravatar_size.small), user %>
          <% end %>
        </div>
      <% else %>
        <span>
          <%= t ".no_follow", follow_: @title %>
        </span>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% else %>
      <span>
        <%= t ".no_follow", follow_: @title %>
      </span>
    <% end %>
  </div>
</div>
